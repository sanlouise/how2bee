<h2 class="center orange-text">Login</h2>

<div class="row">
  <div class="col m4 offset-m4 center">  
    <%= form_tag '/login' do %>
      
      <div class="input-field active">
        <%= label_tag :email, "Email", class: "active" %>
        <%= text_field_tag :email %>
      </div>
      
      <div class="input-field active">
        <%= label_tag :password, "Password", class: "active" %>
        <%= password_field_tag :password %>
      </div>
      
      <%= submit_tag 'Login', class: 'btn waves-effect waves-light' %>
      
    <% end %>
  </div>
</div>