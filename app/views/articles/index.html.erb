<p id="notice"><%= notice %></p>

<section class="article-font">
  
  <!--Intro Card-->
  <div class="row">
    <div class="col s12 m10 offset-m1 l8 offset-l2">
      <div class="card green">
        <div class="card-content white-text center">
          <div class="card-title">
            Welcome!
          </div>
          <p>Here you can find all the articles on how to become a beekeeper.</p>
        </div>
      </div>
    </div>
  </div>
  
  <!--Cards-->
  <% @articles.sort_by{|item| item.created_at}.reverse.each do |article| %>
    <div class="row">
      <div class="col s12 m8 offset-m2 l4 offset-l4">
        <div class="card orange">
          <!--Image-->
          <div class="card-image waves-effect waves-block waves-light">
            <%= link_to image_tag(article.image), article_path(article.title) %>
          </div>
          <div class="card-content white-text center">
            <span class="card-title">
              <!--Title-->
              <%= link_to article.title, article_path(article.title) %>
            </span>
            <!--Date-->
            <p><%= link_to article.description, article_path(article.title) %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  
</section>